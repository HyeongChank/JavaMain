package CodeTest;

public class QuickSort {

	static int [] swap(int[] arr, int ln, int rn) {
		int temp = arr[ln];
		arr[ln] = arr[rn];
		arr[rn] = temp;
		return arr;
	}
	
	static int[] quicksort(int [] arr, int left, int right) {
		int ln = left;
		int rn = right;
		int x = arr[ln+rn/2];
		
		do {
			while(arr[ln]<x) ln++;
			while(arr[rn]>x) rn--;
			if(arr[ln]<arr[rn]) {
				swap(arr, ln, rn);
			}
		} while(arr[ln]<arr[rn]);
		if(left<rn) quicksort(arr, left, rn);
		if(right<ln) quicksort(arr, ln, right);
		
		return arr;
	}
	
	
	static void print(int []arr) {
		for(int i:arr) {
			System.out.print(i + "  ");
		}
	}
	public static void main(String[] args) {
		int basic [] = {4,3,6,7,5,2,1,8};
		int left = 0;
		int right = basic.length;
		print(quicksort(basic, left, right));

	}

}
