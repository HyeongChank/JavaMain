package CodeTest;

public class BubbleSort {

	public static void main(String[] args) {
		int [] arr = {3,4,5,6,7,2,9,-1,1};
		int temp =0;
		int num =0;
		for(int i=arr.length ; i>0;i--) {
			for(int j =arr.length-1 ; j>0; j--) {
				if(arr[j-1] > arr[j]) {
					temp = arr[j-1];
					arr[j-1] = arr[j];
					arr[j] = temp;
					num++;
					for(int k : arr) {
						System.out.print(k + " " + "num=" + num);
					}
					System.out.println();
				}
				
			}
		}
		for(int i : arr) {
			System.out.print(i + " ");
		}
		System.out.println(num);

	}

}
